<%- include('../header') %>
  <%- include('./adminNavbar') %>
    <div class=" d-flex">
      <%- include('./adminpanel') %>
        <div class="container col-lg-8  max-vh-100 max-vw-100  table-responsive mb-4"
          style="overflow: auto; margin-top: 150px; ">
          <table class="table align-right mb-0 bg-white custom-table ">
            <thead class="ms-4">
              <tr aria-colspan="2">
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Quantity</th>
                <th scope="col">price</th>
                <th scope="col">Image</th>
                <div>
                  <th colspan="3"></th>
                </div>

              </tr>
            </thead>
            <% if (productList.length> 0) { %>
              <% productList.forEach(product=> { %>
                <tr>
                  <td>
                    <%= product.name %>
                  </td>
                  <td>
                    <%= product.category %>
                  </td>
                  <td>
                    <%= product.quantity %>
                  </td>
                  <td>
                    <%= product.price %>
                  </td>
                  <td><img src="<%= product.image[0] %>" alt="" style="width: 35px;height: 35px;"></td>
                  <td>
                    <!-- delete Product -->
                    <button type="submit" class="btn btn-danger">
                      <a href="/productDelete?id=<%= product._id %>" class="text-light text-decoration-none">Delete</a>
                    </button>
                  </td>
                  <td>
                    <!-- Edit Product -->
                    <button type="submit" class="btn btn-secondary">
                      <a href="/productEdit?id=<%= product._id %>" class="text-light text-decoration-none">Edit</a>
                    </button>
                  </td>
                </tr>
                <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="7">No products Found</td>
                    </tr>
                    <% } %>

          </table>

        </div>
    </div>