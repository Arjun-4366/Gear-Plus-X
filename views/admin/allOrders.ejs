<%- include('../header') %>
<%- include('./adminNavbar') %>


<div class=" d-flex">
  <!-- Admin Panel -->
    <%- include('./adminpanel') %>
    <!-- All order Details -->
    <div class="container col-lg-8  max-vh-100 max-vw-100  table-responsive mb-4" style=" margin-top: 150px; ">
        <table class="table align-right mb-0 bg-white custom-table ">
          <thead class="ms-4">
            <tr aria-colspan="2">
              <th scope="col">User</th>
              <th scope="col">OrderId</th>
              <th scope="col">Item name</th>
              <th scope="col">Order Date</th>
              <th scope="col">Status</th>
              <div><th colspan="3"></th> </div>
            </tr>
          </thead>
         <% order.forEach(item=>{%>
            <% item.userOrders.forEach(elem=>{ %>
              <tr>
                <td><%= item.customerName %></td>
                <td><%= elem._id %></td>
                <td><%= elem.productInfo.name %></td> 
                <td><%= elem.orderDate %></td>
                <td><%= elem.status %></td>
              </tr>
              <%  }) %>
              <% }) %>
        </table>
      </div>
</div>



<%- include('../footer') %>