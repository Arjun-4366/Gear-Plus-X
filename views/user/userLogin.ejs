<%- include('../header') %>

  <section class=" gradient-custom " >
    <div class="container-fluid py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card  text-dark border-secondary rounded-3" style="border-radius: 1rem; ">
            <div class="card-body p-5 text-center rounded-3 border-dark" style="background-color: white;border-radius: 40px;box-shadow: 0 10 10 10;">

              <div class="mb-md-5 mt-md-4 p-5 border border-dark rounded-3 shadow p-3 mb-5  rounded-3"  style="background-color: white;">

                <img src="/public/assets/invoice-logo.png" alt="" style="width: 140px;height: 50px;">
                <p class="text-dark-50 mb-5 mt-4">Please enter your login and password!</p>
                <% if( typeof message !='undefined' ) {%>


                  <p class="text-50 mb-5 mt-4 text-danger fade-in">
                    <%= message %>
                  </p>

                  <% }%>
                    <form action="/userHome" method="post">
                      <div class="form-outline form-dark mb-4">
                        <input type="email" id="typeEmailX" class="form-control form-control-lg border-dark" name="email" />
                        <label class="form-label" for="typeEmailX">Email</label>
                      </div>

                      <div class="form-outline form-dark mb-4">
                        <input type="password" id="typePasswordX" class="form-control form-control-lg border-dark"
                          name="password" />
                        <label class="form-label" for="typePasswordX">Password</label>
                      </div>

                      <p class="small mb-5 pb-lg-2"><a class="text-dark-50 text-decoration-none" href="/forgotPassword">Forgot password?</a></p>

                      <button class="btn btn-outline-dark btn-lg px-5" type="submit">Login</button>
                    </form>
                    <p class="mt-2">OR</p>
                    <P>Login With</P>

                    <div class="d-flex justify-content-center text-center mt-4 pt-1">
                      <a href="/auth/google" class="text-white google"><img src="/public/assets/google-logo.jpg" alt="" style="width: 25px;height: 25px;" class=""></a>
                    </div>
                    <div class="mt-4">
                      <p class="mb-0">Don't have an Account ? Create one ! </p>
                      <a class="btn btn-outline-dark btn-lg px-5 mt-3" type="submit" href="/userRegister">Sign In</a>
                    </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


  <%- include('../footer') %>