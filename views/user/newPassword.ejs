<%- include('../header') %>

  <section class=" gradient-custom " style="border-radius: 1rem; background-color:white ;">
    <div class="container-fluid py-5 h-100">
      <div class="mt-3 ms-4">
        <a href="/" class=" btn btn-warning text-decoration-none fs-5 text-">Go Home </a>
      </div>
      <div class="row d-flex justify-content-center align-items-center h-100 ">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5 ">
          <div class="card  text-dark border-dark" style="border-radius: 1rem; background-color:white ;">
            <div class="card-body p-5 text-center">

              <div class="mb-md-5 mt-md-4 p-5 border border-dark rounded-3">

                <img src="/public/assets/admin logo.png" alt="" style="width: 140px;height: 50px;">
                <div class="form-outline form-white mb-4">
                  <form action="/addNewPassword" method="post">
                    <p id="warning-text" class="text-danger"></p>
                    <input type="password" id="password" class="form-control form-control-lg  mb-4 border-dark"
                      placeholder="New Password" name="password" required />
                    <input type="password" id="confirmPassword" class="form-control form-control-lg border-dark"
                      placeholder="Confirm Password" name="confirmPassword" onkeyup='check()' required />
                    <div class="mt-4">

                      <button class="btn btn-outline-dark btn-lg px-5 mt-3" type="submit" id="submit">Submit</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </section>

  <script>
    let check = function () {
      let submitButton = document.getElementById('submit')
      let password = document.getElementById('password')
      let confirmPassword = document.getElementById('confirmPassword')
      let message = document.getElementById('warning-text')
      if (password.value !== confirmPassword.value) {
        confirmPassword.style.borderColor = 'red'
        message.innerText = 'Password does not match'
      }
      else {
        confirmPassword.style.borderColor = 'black'
        message.innerText = ''
      }
    }

  </script>



