<%- include('../header') %>

    <%- include('./navbar',{image,cart,userId}) %>

        <%- include('./banner') %>
            <section class="" style="margin-top:50px;">
            <!-- Product details -->
                <h3 class="d-flex align-items-center justify-content-center mb-2 text-secondary">Explore the Products
                </h3>
                <div class="row container-fluid product-container">
                    <% if(productList.length>0) {%>
                        <% productList.forEach(product=>{ %>

                            <div class="col-lg-3 col-md-4 mt-3">
                                <div class="card shadow d-flex flex-column">
                                    <a href="/productInformation?id=<%= product._id %>"><img
                                            src="<%= product.image[0] %>" alt="black watch" class="p-4 "> </a>
                                    <div class="card-footer border-top border-gray-300 mb-3">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <a href="#" class="h6 text-decoration-none">
                                                <%= product.name %>
                                            </a>
                                            <form action="/addToWishlist?id=<%= product._id %>" method="post">
                                                <button type="submit" class="btn border-0 fs-5">
                                                    <div class=" align-items-center d-flex flex-column">
                                                        <% if (product.isWishlist==true) { %>
                                                            <i class="fa fa-heart fs-3" style="color: red;"></i>

                                                            <% } else { %>
                                                                <i class="fa fa-heart fs-3" style="color: grey;"></i>

                                                                <% } %>
                                                    </div>
                                                </button>
                                            </form>
                                        </div>
                                        <p class="text-danger">
                                            <%= product.brand %>
                                        </p>
                                        <h6 class=" d-flex  fw-light text-gray mt-2">
                                            <%= product.discription %>
                                        </h6>
                                        <form action="/addToCart?id=<%= product._id %>" method="post">
                                            <div class="d-flex justify-content-between align-items-center mt-3">
                                                <h5 class="text-danger fw-lighter mt-2">
                                                    <%= product.discount>0 ? '-%' + product.discount :'' %>
                                                </h5>
                                                <p class="h5 mb-0 text-gray">â‚¹<%= product.discountedPrice %>
                                                </p>

                                                <button class="btn btn-success btn-tertiary" type="submit">
                                                    <span class="fas fa-cart-plus me-2"></span> Add to cart
                                                </button>

                                            </div>
                                            <p class="text-decoration-line-through fw-lighter">
                                                <% if(product.price !=product.discountedPrice) {%>
                                                    MRP: <%= product.price%>
                                            </p>
                                            <% } %>
                                        </form>


                                    </div>
                                </div>
                            </div>

                            <% }) %>

                                <% }%>


                </div>

            </section>
               <!-- Pagination -->
            <div class="d-flex  justify-content-center align-items-center mt-5">
                <% for(let i=1; i<=totalPages; i++){%>
                    <a href="?page=<%= i %>"
                        class="text-decoration-none ms-4 bg-primary text-white d-flex align-items-center justify-content-center"
                        style="width: 30px;height: 30px;border-radius: 50%;">
                        <%= i %>
                    </a>

                    <% } %>
            </div>
            <h4 class="text-dark mt-5 d-flex align-items-center justify-content-center">Choose your Categories</h4>
            <div class="align-items-center justify-content-center row container-fluid mt-5 mb-5" id="categories">

                <!-- categories -->
                <a href="/categories?key=football" class="card col-lg-3 align-items-center justify-content-center"
                    style="border: none;"> <img src="/public/assets/football-categories.png"
                        class="object-fit-cover border rounded" alt="...">
                </a>

                <a href="/categories?key=Cricket" class="card col-lg-3 align-items-center justify-content-center"
                    style="border: none;"> <img src="/public/assets/cricket-categories.png"
                        class="object-fit-cover border rounded" alt="...">

                </a>

                <a href="/categories?key=athelete" class="card col-lg-3 align-items-center justify-content-center"
                    style="border: none;"> <img src="/public/assets/athelete-categories.png"
                        class="object-fit-cover border rounded" alt="...">
                </a>

                <a href="/categories?key=Badminton" class="card col-lg-3 align-items-center justify-content-center"
                    style="border: none;"><img src="/public/assets/badminton-categories.png"
                        class="object-fit-cover border rounded" alt="...">
                </a>

            </div>

            <%- include('../footer') %>